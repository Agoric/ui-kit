{
  "name": "@agoric/react-components",
  "version": "0.5.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/agoric/ui-kit"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./dist/style.css": "./src/lib/tailwind/theme.css"
  },
  "scripts": {
    "build": "tsc && cp -r src/lib/tailwind dist/",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint --ext .js,.jsx,.ts,.tsx --fix",
    "test": "vitest run --passWithNoTests",
    "test:cov": "vitest run --coverage",
    "prettier": "prettier -c src/*",
    "prettier:fix": "prettier -w src/*",
    "prepack": "yarn build"
  },
  "dependencies": {
    "@agoric/notifier": "^0.6.3-dev-8c14632.0",
    "@agoric/rpc": "^0.10.0",
    "@agoric/web-components": "^0.17.0",
    "@cosmjs/proto-signing": "^0.36.1",
    "@cosmjs/stargate": "^0.36.1",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@agoric/ertp": "^0.16.3-dev-e2e36cc.0",
    "@babel/core": "7.22.10",
    "@headlessui/react": "^1.7.18",
    "@testing-library/react": "14.0.0",
    "@types/node": "20.12.11",
    "@types/react": "18.3.1",
    "@types/react-dom": "18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@vitest/coverage-v8": "0.34.1",
    "autoprefixer": "10.4.14",
    "babel-loader": "9.1.3",
    "eslint": "8.46.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-config-standard-with-typescript": "43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "16.0.1",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-react": "7.33.1",
    "eslint-plugin-storybook": "0.6.13",
    "jsdom": "22.1.0",
    "json": "11.0.0",
    "lint-staged": "13.2.3",
    "postcss": "8.4.27",
    "prettier": "3.2.5",
    "prop-types": "15.8.1",
    "storybook": "7.2.2",
    "tailwindcss": "3.3.3",
    "typescript": "5.5.0-beta",
    "vitest": "1.6.0"
  },
  "peerDependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "files": [
    "dist"
  ],
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md}": [
      "prettier -w"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
