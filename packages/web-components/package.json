{
  "name": "@agoric/web-components",
  "description": "Webcomponents for Agoric dapps",
  "license": "MIT",
  "author": "Agoric",
  "version": "0.6.3",
  "main": "index.js",
  "module": "index.js",
  "scripts": {
    "build": "exit 0",
    "lint": "run-s --continue-on-error lint:*",
    "lint:types": "tsc -p jsconfig.json",
    "lint:eslint": "eslint . --ignore-path .gitignore",
    "analyze": "cem analyze --litelement",
    "test": "exit 0"
  },
  "dependencies": {
    "@agoric/assert": "^0.6.0",
    "@agoric/cache": "^0.3.2",
    "@agoric/casting": "^0.4.2",
    "@agoric/ertp": "^0.16.2",
    "@agoric/notifier": "^0.6.3-dev-8c14632.0",
    "@agoric/smart-wallet": "^0.5.3",
    "@agoric/wallet": "^0.18.3",
    "@endo/captp": "^3.1.1",
    "@endo/eventual-send": "^0.17.2",
    "@endo/marshal": "^0.8.5",
    "@endo/promise-kit": "^0.2.56",
    "@lit-labs/react": "^1.0.1",
    "lit": "2.0.2"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.4.17",
    "@keplr-wallet/types": "^0.11.37",
    "@open-wc/eslint-config": "^10.0.0",
    "@rollup/plugin-commonjs": "^25.0.1",
    "@web/dev-server": "^0.2.2",
    "@web/test-runner": "^0.16.1",
    "eslint": "^8.36.0",
    "eslint-plugin-lit": "^1.8.2",
    "eslint-plugin-lit-a11y": "^2.4.0"
  },
  "customElements": "custom-elements.json",
  "eslintConfig": {
    "extends": [
      "@open-wc",
      "@agoric"
    ],
    "rules": {
      "import/no-extraneous-dependencies": "off",
      "prettier/prettier": "off"
    },
    "overrides": [
      {
        "files": [
          "test/**/*.test.js"
        ],
        "rules": {
          "@jessie.js/safe-await-separator": "off"
        }
      }
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./jsconfig.json"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
