{
  "name": "@agoric/web-components",
  "description": "Webcomponents for Agoric dapps",
  "license": "Apache-2.0",
  "author": "Agoric",
  "version": "0.12.0",
  "main": "dist/index.js",
  "scripts": {
    "prepack": "tsc --build tsconfig.build.json",
    "lint": "run-s --continue-on-error lint:*",
    "lint:types": "tsc -p tsconfig.json",
    "lint:eslint": "eslint .",
    "analyze": "cem analyze --litelement",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@agoric/assert": "^0.6.0",
    "@agoric/cache": "^0.3.2",
    "@agoric/casting": "^0.4.2",
    "@agoric/ertp": "^0.16.2",
    "@agoric/notifier": "^0.6.3-dev-8c14632.0",
    "@agoric/smart-wallet": "^0.5.3",
    "@agoric/wallet": "^0.18.3",
    "@endo/captp": "^3.1.1",
    "@endo/eventual-send": "^0.17.5",
    "@endo/marshal": "^0.8.5",
    "@endo/promise-kit": "^0.2.56",
    "@lit-labs/react": "^1.0.1",
    "lit": "2.8.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@custom-elements-manifest/analyzer": "^0.4.17",
    "@keplr-wallet/types": "^0.11.37",
    "@open-wc/eslint-config": "^10.0.0",
    "@rollup/plugin-commonjs": "^25.0.1",
    "@web/dev-server": "^0.2.2",
    "@web/test-runner": "^0.16.1",
    "eslint": "^8.36.0",
    "eslint-plugin-lit": "^1.8.2",
    "eslint-plugin-lit-a11y": "^2.4.0",
    "ses": "0.18.7",
    "vitest": "^0.34.1"
  },
  "customElements": "custom-elements.json",
  "eslintConfig": {
    "extends": [
      "@open-wc",
      "@agoric",
      "plugin:jsdoc/recommended-typescript-flavor-error"
    ],
    "rules": {
      "jsdoc/require-returns-description": "off",
      "jsdoc/require-param-description": "off",
      "jsdoc/require-property-description": "off",
      "jsdoc/require-returns": "off",
      "jsdoc/check-tag-names": "off",
      "jsdoc/tag-lines": "off",
      "import/no-extraneous-dependencies": "off"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
