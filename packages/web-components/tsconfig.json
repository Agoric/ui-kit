// This file can contain .js-specific Typescript compiler config.
{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true, // for tests
    "outDir": "./dist",
    "checkJs": true
  },
  "include": [
    "*.js",
    "src/**/*.js",
    "test/**/*.js",
    "*.ts",
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
